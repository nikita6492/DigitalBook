package com.digitalbooks.bookservice.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.digitalbooks.bookservice.entity.Book;

@Repository
public interface BookRepository extends JpaRepository<Book, Long> {
	@Query("select * from Book b where b.category=?1 OR b.title=?2 OR b.price=?3 OR b.publisher=?4 OR b.author=?")
	public Book findByCategoryAndTitleAndPriceAndPublisherAndAuthor(String category,String title,Double price,String publisher,String author);

}
